
<div class="burgerimg">
  <img src="/assets/img/burger.png">
  <h1>Eat a Burger!</h1>
</div>

<div class="row">
  <div class="column">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <div class="burgerrow">
        <div class="uneaten">
            {{burger_name}}
            <button class="devour-burger" data-id="{{this.id}}">Devour!</button>
        </div>
        </div>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
        <div class="eaten">
            {{burger_name}}
        </div>
        {{/if}}
      {{/each}}
    </ul>
  </div>

</div>
<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger:</label>
    <textarea rows="4" cols="50" id="burg" name="burger_name"></textarea>
  </div>
  <button type="submit">Create Burger!</button>
</form>
